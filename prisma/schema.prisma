datasource db {
  url      = env("DATABASE_URL")
  provider = "mongodb"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @map("_id")
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @map("_id")
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model Category {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String        @unique
  description   String?
  image         String?
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  subcategories SubCategory[]
  products      Product[]

  @@map("category")
}

model SubCategory {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  description    String?
  image          String?
  isActive       Boolean          @default(true)
  categoryId     String           @db.ObjectId
  category       Category         @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  products       Product[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  CompanyProduct CompanyProduct[]

  @@unique([name, categoryId])
  @@map("subcategory")
}

model Product {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  categoryId    String?        @db.ObjectId
  subcategoryId String?        @db.ObjectId
  category      Category?      @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  subcategory   SubCategory?   @relation(fields: [subcategoryId], references: [id], onDelete: SetNull)
  productPrices ProductPrice[]
  rating        Float          @default(0)
  reviews       Int            @default(0)
  image         String
  badge         String?
  description   String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@map("product")
}

model Service {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  duration    String
  price       String
  description String
  features    String[]
  popular     Boolean  @default(false)
  category    String?
  image       String?
  buttonText  String?
  iconName    String   @default("Star")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("service")
}

model CompanyProduct {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  code String

  subCategoryId        String?               @db.ObjectId
  subCategory          SubCategory?          @relation(fields: [subCategoryId], references: [id], onDelete: SetNull)
  Company              Company?              @relation(fields: [companyId], references: [id])
  companyId            String?               @db.ObjectId
  companyProductPrices CompanyProductPrice[]

  @@map("company_product")
}

model CompanyProductPrice {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  price   Float
  variant String

  companyProductId String         @db.ObjectId
  companyProduct   CompanyProduct @relation(fields: [companyProductId], references: [id], onDelete: Cascade)

  @@map("company_product_price")
}

model ProductPrice {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  price   Float
  variant String

  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_price")
}

model Company {
  id              String           @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  companyProducts CompanyProduct[]

  @@map("company")
}
